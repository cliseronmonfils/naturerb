<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SymptomesTete">

    // menu

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>


<View
        android:id="@+id/divider"
        android:layout_width="480dp"
        android:layout_height="1dp"
        android:layout_marginTop="56dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="408dp"
        android:layout_height="704dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="TÃªte / Gorge"
                android:textColor="#4472C4"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginBottom="20dip"
                app:srcCompat="@drawable/logo_tete" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Maux de   tete"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Otite"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Ecoulement Nasal"
                    android:textColor="@android:color/white"

                    android:textSize="14sp" />

                  


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Chute Cheveux"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Toux    grasse"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="top|end"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Toux      Seche"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dip"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Piqure Moustique"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Herpes"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>