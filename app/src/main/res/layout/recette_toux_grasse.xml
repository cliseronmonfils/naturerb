<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecetteBallonement">

    // menu

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>


    <TextView
        android:id="@+id/libelle"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="56dp"
        android:background="#4472C4"
        android:gravity="center"
        android:text="Toux grasse"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="@id/app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/libelle">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomRecette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="0dp"
                android:text="Ingrédient:\nLierre grimpant"
                android:textColor="@color/bleu"
                android:textSize="18sp"
                app:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/recette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="En infusion : le dosage est de 30 g/L pour une tasse, recouvrez d\'eau bouillante, couvrez (pour ne pas laisser s\'échapper les principes actifs...), et laissez infuser 10 minutes maximum, filtrez. En boire 3 à 5 tasses par jour jusqu’à amélioration des symptômes. En cas de rhume, de bronchite et même de coqueluche, son action permet de dégager les voies respiratoires et apaiser une toux grasse. "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout" />
            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="40dp"
                android:text="Source : https://www.femmeactuelle.fr/sante/medecine-douce/toux-medecines-douces-26805"
                android:textColor="@color/bleu"
                android:textSize="10sp"
                app:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/nomRecette2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:text="Ingrédient:\nMauve"
                android:textColor="@color/bleu"
                android:textSize="18sp"
                app:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/recette2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="En infusion : le dosage est de 30 g/L pour une tasse, recouvrez d\'eau bouillante, couvrez (pour ne pas laisser s\'échapper les principes actifs...), et laissez infuser 10 minutes maximum, filtrez. En boire 3 à 5 tasses par jour jusqu’à amélioration des symptômes. Propriétés calmantes, adoucissantes et anti-inflammatoires : la mauve apaise les gorges irritées ou enflammées et calme la toux grasse. "
                app:layout_constraintStart_toStartOf="parent"
                 />

            <TextView
                android:id="@+id/source2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="80dp"
                android:text="Source : https://www.femmeactuelle.fr/sante/medecine-douce/toux-medecines-douces-26805"
                android:textColor="@color/bleu"
                android:textSize="10sp"
                app:fontFamily="sans-serif" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>