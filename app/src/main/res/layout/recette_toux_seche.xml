<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecetteBallonement">

    // menu

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"></include>


    <TextView
        android:id="@+id/libelle"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="56dp"
        android:background="#4472C4"
        android:gravity="center"
        android:text="Toux sèche"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="@id/app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/libelle">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomRecette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="0dp"
                android:text="Ingrédient:\nThym"
                android:textColor="@color/bleu"
                android:textSize="18sp"
                app:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/recette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="Laisser infuser pendant 10 minutes 20 g de sommités fleuries séchées dans 1 litre d’eau bouillante. L’astuce : ajoutez une cuillère de miel pour adoucir la gorge ou quelques gouttes de citron pressé, un excellent antiseptique. Prendre 3 tasses par jour.\n« Privilégiez le thym en vrac, il est plus concentré et donc plus efficace que le thym que l’on trouve en sachet prêt à l’emploi »\n Ses vertus antiseptiques en font un très bon agent assainissant de la sphère ORL et des bronches. "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout" />
            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="40dp"
                android:text="Source : https://www.plantes-et-sante.fr/articles/plantes-medicinales/2088-thym-les-proprietes-dun-antiseptique-puissant"
                android:textColor="@color/bleu"
                android:textSize="10sp"
                app:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/nomRecette2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:text="Ingrédient:\nBouillon-blanc"
                android:textColor="@color/bleu"
                android:textSize="18sp"
                app:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/recette2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="En infusion : le dosage est de 30 g/L pour une tasse, recouvrez d\'eau bouillante, couvrez (pour ne pas laisser s\'échapper les principes actifs...), et laissez infuser 10 minutes maximum, filtrez. En boire 3 à 5 tasses par jour jusqu’à amélioration des symptômes. Utilisées, principalement pour calmer les toux et, plus généralement, les inflammations des voies respiratoires, du fait de leurs propriétés expectorantes (dû à la présence de saponosides, qui sont des molécules spécifiques) et adoucissantes (dû à la présence de mucilages). "
                app:layout_constraintStart_toStartOf="parent"
                 />

            <TextView
                android:id="@+id/source2"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="80dp"
                android:text="Source : https://www.femmeactuelle.fr/sante/medecine-douce/toux-medecines-douces-26805"
                android:textColor="@color/bleu"
                android:textSize="10sp"
                app:fontFamily="sans-serif" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>